extends _templates/main
//- extends _templates/main-tailwind

block title
	| Карточка товара

block content
	main.main
		.__wrapper
			+crumbs('breadcrumbs', ['Главная', 'Головные Уборы', 'Tropic Wide Brim Stripe Casuаl'], false)

		.product
			.product__wrapper
				.product__view
					.product-card
						.img
							.slider.slider-product
								.slide
									img.img-fluid(data-lazy='./img/source/temp/p-4.png', alt='')
								.slide
									img.img-fluid(data-lazy='./img/source/temp/p-2.jpg', alt='')
								.slide
									img.img-fluid(data-lazy='./img/source/temp/p-3.jpg', alt='')
				
				form(action="#" class="form").product__info
					.product__block
						h1.product__name Tropic Wide Brim Stripe Casual
						.product__price 4 950 ₽
					
					.product__block
						.product__colors-sect.colors-product
							.colors-product__header
								.colors-product__key.product__info-title ЦВЕТ
								.colors-product__val Golden Palm
							
							.colors-product__list
								- for (var i=0; i < 22; i++)
									label.colors-product__item
										input( type="radio" checked=i==0?true:false name="prod-color" class="colors-product__input")
										if i < 9
											span.colors-product__color
												img(src="img/product-page/colors/0"+(i+1)+".png" alt="alt")
										else
											span.colors-product__color
												img(src="img/product-page/colors/"+(i+1)+".png" alt="alt")
					.product__block
						.product__info-title РАЗМЕР

						.list-size
							label.list-size__label
								input(type="radio" class="list-size__radio" name="prod-size")
								span.list-size__item
									span.list-size__item-name s
									span.list-size__item-value 54/55
							label.list-size__label
								input(type="radio" class="list-size__radio" name="prod-size")
								span.list-size__item
									span.list-size__item-name m
									span.list-size__item-value 56/57
							label.list-size__label
								input(type="radio" class="list-size__radio" name="prod-size")
								span.list-size__item
									span.list-size__item-name l
									span.list-size__item-value 58/59
							label.list-size__label
								input(type="radio" class="list-size__radio" name="prod-size")
								span.list-size__item
									span.list-size__item-name xl
									span.list-size__item-value 60/61
							label.list-size__label
								input(type="radio" class="list-size__radio" name="prod-size")
								span.list-size__item
									span.list-size__item-name xxl
									span.list-size__item-value 62/63
							.list-size__item.list-size__item--link.js-modal-size
								a.list-size__item-action(href='#') &Kcy;&acy;&kcy; &vcy;&ycy;&bcy;&rcy;&acy;&tcy;&softcy; &rcy;&acy;&zcy;&mcy;&iecy;&rcy;
					
					.product__block.product__to-cart
						button.btn.btn-fw.product__order-btn(type="button" disabled) для заказа выберите размер
					
					.product__block
						.product__info-title НАЛИЧИЕ В МАГАЗИНАХ
						.mob-main-item.mob-card-availability
							.mob-card-availability-list
								.mob-card-availability-list__item.mob-card-availability-list__item--absent
									.mob-card-availability-list__item-name Дизайн завод
									.mob-card-availability-list__item-data
										.mob-card-availability-list__item-value Закончились
								
								include _includes/product-card/product-booking-form

								.mob-card-availability-list__item
									.mob-card-availability-list__item-name &Tcy;&vcy;&iecy;&rcy;&scy;&kcy;&acy;&yacy;
									.mob-card-availability-list__item-data
										.mob-card-availability-list__item-value &Vcy; &ncy;&acy;&lcy;&icy;&chcy;&icy;&icy;
										button(type="button").mob-card-availability-list__item-book(href='#') &Zcy;&acy;&bcy;&rcy;&ocy;&ncy;&icy;&rcy;&ocy;&vcy;&acy;&tcy;&softcy;
								
								include _includes/product-card/product-booking-form
								
								.mob-card-availability-list__item
									.mob-card-availability-list__item-name &Scy;&kcy;&lcy;&acy;&dcy;
									.mob-card-availability-list__item-data
										.mob-card-availability-list__item-value &Vcy; &ncy;&acy;&lcy;&icy;&chcy;&icy;&icy;
										.mob-card-availability-list__item-value Готово к отправке
								

								.mob-card-availability-list__item.mob-card-availability-list__item--success
									.mob-card-availability-list__item-name Заказ успешно оформлен

					
					.product__block
						h4.product__subtitle Классическая летняя панама от Kangol
						.product__text
							p
								| Узор «птичий глаз» не подразумевает ничего другого, кроме как внешнего сходства с глазом птицы. Важно отметить, что это не наносной принт, а тканый узор из нитей двух контрастных цветов. Обычно материал, сотканный таким способом, используется для пошива мужских костюмов, рубашек и аксессуаров, например, галстуков.
							p Также кепка украшена тонкими контрастными полосами, которые симметрично расходятся от центра к боковым панелям.


					//- data-point="767.98" - выше этой ширины экрана спойлеры будут всегда раскрыты и не будут сворачиваться по клику. Ниже этой ширины спойлеры изначально будут свернуты, а по клику сворачиваться/разворачиваться. Если убрать data-point спойлеры будут рабоать обычным образом
					//-  data-minimizeSiblings - при наличии этого атрибута при раскрытии одного спойлера все его соседи будут сворачиваться
					
					.product__spoilers
						.product__block
							div(data-spoilers)
								details(data-spoiler-item)
									summary(data-spoiler-title='') подробнее
									div(data-spoiler-content='')
										- var more = [{key:'Производство', val:'Вьетнам'}, {key:'Артикул', val:'K4366'}, {key:'Уход', val:'Химчистка'}];

										each item in more
											.mob-card-availability-list__item
												.mob-card-availability-list__item-name= item.key
												.mob-card-availability-list__item-data
													.mob-card-availability-list__item-value= item.val

										.mob-card-availability-list__item
											.mob-card-availability-list__item-name Состав
											.mob-card-availability-list__item-data
												.mob-card-availability-list__contain
													.mob-card-availability-list__col
														.mob-card-availability-list__item-value Полиэстер
													.mob-card-availability-list__col
														.mob-card-availability-list__item-value 100%

												.mob-card-availability-list__contain
													.mob-card-availability-list__col
														.mob-card-availability-list__item-value Эластан
													.mob-card-availability-list__col
														.mob-card-availability-list__item-value 8%

								details(data-spoiler-item open=i<1?true:false)
									summary(data-spoiler-title='') доставка и оплата
									div(data-spoiler-content='')
										.product__block
											.product__text-block
												h4.product__subtitle Оплата
												.product__text
													p Оплата курьеру наличными при получении заказа на территории РФ.
													p Вы можете оплатить заказ наложенным платежом при получении на почте.
													p При покупках в наших розничных магазинах вы можете оплатить как наличными, так и банковской картой.
													p Для заказов из стран СНГ — 100% оплата перед отправкой, так как курьерская служба не оказывает услуги наложенного платежа при доставках в другие страны. Примерка перед оплатой товара — невозможна, так как курьерская служба не оказывает данную услугу.

										.product__block
											.product__text-block
												h4.product__subtitle Обмен / Возврат
												.product__text
													p Вы можете обменять или вернуть любой купленный у нас в товар в течении 14 дней со дня получения своего заказа - при отсутствии следов эксплуатации, сохранении товарного вида, всех заводских бирок и упаковки. Доставка возвратов до нас – оплачивается покупателем. Возврат денежных средств осуществляется без стоимости доставки.

										.product__block
											.product__text-block
												h4.product__subtitle Доставка
												.product__text
													p Мы доставим товар самым быстрым и удобным для вас способом или же вы можете забрать свой заказ в любом из наших магазинов в Москве.
													p Курьером по Москве на следующий день после заказа, курьером в регионы до двери, или терминала, почтой по территории РФ, службами доставки в СНГ - выбирать вам, свяжитесь с нами для уточнения сроков доставки.

		button.btn.btn-gray.btn-fw.to-top-btn(type="button") НАВЕРХ
		//- include _sections/blog


