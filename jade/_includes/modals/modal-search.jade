.mob-modal.modal-search
		.modal-bg
			
		.mob-modal-box.modal-search__box
			
			.modal-search__top
				.modal-search__icon
					svg(width='20', height='20', viewBox='0 0 20 20', fill='none', xmlns='http://www.w3.org/2000/svg')
						path(d='M7.5 14C11.0899 14 14 11.0899 14 7.5C14 3.91015 11.0899 1 7.5 1C3.91015 1 1 3.91015 1 7.5C1 11.0899 3.91015 14 7.5 14Z', stroke='#1C1C1E', stroke-width='2', stroke-miterlimit='10')
						path(d='M12 12L19 19', stroke='#1C1C1E', stroke-width='2', stroke-miterlimit='10')
				
				.modal-search__label
					input(autocomplete="off" type="text" name="" class="modal-search__input" placeholder="Введите запрос поиска")
					.reset

				button(type="button").modal-close.modal-search__close
					svg(width='18', height='18', viewBox='0 0 18 18', fill='none', xmlns='http://www.w3.org/2000/svg')
						path(d='M16.8697 3.48792C17.0709 3.28672 17.0996 2.97056 16.8984 2.76936L15.2599 1.13081C15.0587 0.929616 14.7138 0.929614 14.5126 1.13081L8.99344 6.64993L3.44558 1.10207C3.24438 0.900872 2.95695 0.900872 2.75575 1.10207L1.11721 2.74062C0.916011 2.94181 0.887268 3.25798 1.08847 3.45918L6.63633 9.00704L1.11721 14.5262C0.916011 14.7274 0.916012 15.0723 1.11721 15.2735L2.75575 16.912C2.95695 17.1132 3.27312 17.0845 3.47432 16.8833L8.99344 11.3642L14.5408 16.9115C14.742 17.1127 15.0581 17.0839 15.2593 16.8828C15.2593 16.8828 16.6967 15.4454 16.8979 15.2442C17.0991 15.043 17.0991 14.7556 16.8979 14.5544C16.6967 14.3532 11.3505 9.00704 11.3505 9.00704L16.8697 3.48792Z', fill='#1C1C1E')

			.modal-search__wrapper
				.modal-search__body
					.modal-search__results
						- var results = ['<span>Wool</span> 504', '<span>Wool</span> Flexfit Baseball', 'Tropic <span>Wool</span> Brim Stripe Casual', '<span>Wool</span> Flexfit Baseball', '<span>Wool</span> 504'];
						
						.modal-search__category Модель
						
						ul.modal-search__list
							each item in results
								.modal-search__item!= item

					- var cards = [{name: 'Multi Quilt Earflap Bucket', price: '9 750 ₽'}, {name: 'Retrocore Standart Split Backpack', price: '2 400 ₽', old: '6 500 ₽ '}, {name: 'Wool 507', price: '14 650 ₽'}];

					.modal-search__cards.product-cards
						each prod, i in cards
							.product-card
								.product-card__img._fit
									img._fit-img(src='./img/search-cards/'+(i+1)+'.jpg', alt='alt')
								.title
									a(href='#')= prod.name
								
								.price-block
									if prod.old
										.price-old= prod.old

									.price= prod.price
				
				.modal-search__footer
					a(href="#").modal-search__more Все результаты по запросу «WOOL»
